<%=@list.name%>
<%= link_to 'add a comment', new_list_bookmark_path(@list)%>
<%= link_to 'back', lists_path%>
<div class="row row-cols-4 row-cols-md-3">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <img src="https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2318&q=80" class="card-img-top">
      <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title%><%= bookmark.movie.rating%></h5>
          <p class="card-text"><%= bookmark.movie.overview%></p>
          <%= bookmark.comment %>
          <%= link_to 'delete bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } %>
      </div>
    </div>
  <% end %>
</div>
