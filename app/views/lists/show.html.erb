<div class= "body-container">
  <h1 class="d-flex justify-content-center mb-5"><%=@list.name%></h1>
  <p class="d-flex justify-content-end"><%= link_to 'Add Movie', new_list_bookmark_path(@list), class: "text-success"%></p>
  <p class="d-flex justify-content-end"><%= link_to 'back', lists_path, class: "text-danger" %></p>
  <div class="row row-cols-4 mb-5 justify-content-between">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mx-1 mb-5">
        <%# <img src="https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2318&q=80" class="card-img-top"> %>
        <img src=<%= bookmark.movie.poster_url%>> 
        <div class="card-body">
            <h5 class="card-title d-flex justify-content-between"><%= bookmark.movie.title%><i class="fas fa-star star"><%= bookmark.movie.rating%></i></h5>
            <p class="card-text"><%= bookmark.movie.overview%></p>
            <div class="d-flex align-itens-center justify-content-between">
              <p class= "text-secondary font-italic"><i class="far fa-comments"> </i> <%= bookmark.comment %></p>
              <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } do %>
                <i class="fas fa-trash-alt text-danger"></i>
              <%end%>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
