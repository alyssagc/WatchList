<div class="list-container d-flex flex-column align-items-center">
  <div class="new-list-card">
    <h1 class="text-danger mt-3 mb-5">New List</h1>
    <div class="form">
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name, label: "What's your new list name?"%>
        <%= f.submit class: "btn-create align-items-center" %>
      <% end %>
    </div>
    <%= link_to 'Back', @list, class: "btn-new d-flex align-items-end" %>
  </div>
</div>
